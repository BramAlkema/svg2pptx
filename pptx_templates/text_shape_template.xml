<p:sp xmlns:p="http://schemas.openxmlformats.org/presentationml/2006/main"
      xmlns:a="http://schemas.openxmlformats.org/drawingml/2006/main">
    <p:nvSpPr>
        <p:cNvPr id="{SHAPE_ID}" name="Text {SHAPE_ID}"/>
        <p:cNvSpPr/>
        <p:nvPr/>
    </p:nvSpPr>
    <p:spPr>
        <a:xfrm>
            <a:off x="{X_EMU}" y="{Y_EMU}"/>
            <a:ext cx="{WIDTH_EMU}" cy="{HEIGHT_EMU}"/>
        </a:xfrm>
        <a:prstGeom prst="rect">
            <a:avLst/>
        </a:prstGeom>
        <a:noFill/>
    </p:spPr>
    <p:txBody>
        <a:bodyPr/>
        <a:lstStyle/>
        <a:p>
            <a:pPr algn="{TEXT_ALIGN}"/>
            <a:r>
                <a:rPr sz="{FONT_SIZE}">
                    <a:solidFill>
                        <a:srgbClr val="{TEXT_COLOR}"/>
                    </a:solidFill>
                </a:rPr>
                <a:t>{TEXT_CONTENT}</a:t>
            </a:r>
        </a:p>
    </p:txBody>
</p:sp>