# SVG to Google Drive API Configuration
# Copy this file to .env and customize for your environment

# API Configuration
API_KEY=your-secure-api-key-here
ENVIRONMENT=development

# Google Drive Configuration
# Choose authentication method: 'oauth' or 'service_account'
GOOGLE_DRIVE_AUTH_METHOD=oauth

# For OAuth authentication (recommended for development)
GOOGLE_DRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_TOKEN_FILE=credentials/oauth-token.json

# For Service Account authentication (for production/server deployments)
GOOGLE_DRIVE_CREDENTIALS_PATH=credentials/service-account.json

# Optional: Default folder for uploads
GOOGLE_DRIVE_FOLDER_ID=

# Server Configuration
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Processing Configuration
MAX_SVG_FILE_SIZE=10000000
TEMP_DIR=/tmp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s